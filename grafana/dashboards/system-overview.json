{
  "dashboard": {
    "title": "FLUX IOT - System Overview",
    "tags": ["flux-iot", "system"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(active_connections)",
            "legendFormat": "Total Connections"
          },
          {
            "expr": "active_connections{protocol=\"rtsp\"}",
            "legendFormat": "RTSP"
          },
          {
            "expr": "active_connections{protocol=\"srt\"}",
            "legendFormat": "SRT"
          }
        ]
      },
      {
        "id": 2,
        "title": "Active Streams",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(active_streams)",
            "legendFormat": "Total Streams"
          },
          {
            "expr": "active_streams{protocol=\"rtsp\"}",
            "legendFormat": "RTSP"
          },
          {
            "expr": "active_streams{protocol=\"srt\"}",
            "legendFormat": "SRT"
          }
        ]
      },
      {
        "id": 3,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(errors_total[5m])",
            "legendFormat": "{{type}} - {{component}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "cpu_usage_ratio * 100",
            "legendFormat": "CPU %"
          }
        ],
        "options": {
          "minValue": 0,
          "maxValue": 100,
          "thresholds": [
            {"value": 0, "color": "green"},
            {"value": 70, "color": "yellow"},
            {"value": 90, "color": "red"}
          ]
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "memory_usage_bytes / 1024 / 1024",
            "legendFormat": "Memory MB"
          }
        ]
      },
      {
        "id": 7,
        "title": "HTTP Request Latency (P99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99"
          },
          {
            "expr": "histogram_quantile(0.90, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P90"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50"
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
