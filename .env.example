# ============================================
# FLUX IOT Platform - 环境变量配置示例
# ============================================

# PostgreSQL 数据库配置
POSTGRES_DB=flux_iot
POSTGRES_USER=flux
POSTGRES_PASSWORD=flux_secret_2026  # 请修改为强密码

# Grafana 配置
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin  # 请修改为强密码

# 应用日志级别
# 可选值: trace, debug, info, warn, error
RUST_LOG=info

# 可选：SMTP 邮件配置（用于告警）
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=alertmanager@flux-iot.com
# SMTP_PASSWORD=your_password
# SMTP_FROM=alertmanager@flux-iot.com

# 可选：Slack Webhook（用于告警）
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
